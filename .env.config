# ========================================
# PORTAS FIXAS DO SISTEMA
# ========================================
# ⚠️  ATENÇÃO: NÃO ALTERE ESTAS PORTAS
# O sistema foi configurado para usar estas portas específicas
# Qualquer alteração pode quebrar a comunicação entre os serviços

POSTGRES_PORT=5432
BACKEND_PORT=5000
FRONTEND_PORT=3000

# ========================================
# HOSTS (Fixos)
# ========================================
BACKEND_HOST=localhost
FRONTEND_HOST=localhost
POSTGRES_HOST=localhost

# ========================================
# URLs COMPLETAS (Geradas automaticamente)
# ========================================
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000
POSTGRES_CONNECTION=postgresql://postgres:postgres@localhost:5432/acheimeufrete

# ========================================
# SEGURANÇA
# ========================================
# Estas configurações garantem que o sistema só aceite
# conexões das portas configuradas acima

ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000,http://localhost:5173,https://localhost:5173
CORS_ENABLED=true
STRICT_PORT_CHECK=true

# ========================================
# AMBIENTE
# ========================================
NODE_ENV=development
PORT=5000

# ========================================
# BANCO DE DADOS
# ========================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/acheimeufrete?schema=public"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=acheimeufrete

# ========================================
# JWT
# ========================================
JWT_SECRET=seu-segredo-super-secreto-aqui-mude-em-producao
JWT_EXPIRATION=7d

# ========================================
# TIMEOUTS
# ========================================
API_TIMEOUT=30000
DATABASE_TIMEOUT=5000

# ========================================
# LOGS
# ========================================
LOG_LEVEL=info
ENABLE_CONSOLE_LOGS=true

# ========================================
# VALIDAÇÕES
# ========================================
VALIDATE_PORT_AVAILABILITY=true
AUTO_KILL_CONFLICTING_PROCESSES=true
REQUIRE_DATABASE_SEED=true

# ╔══════════════════════════════════════════════════════════════╗
# ║  AVISO IMPORTANTE                                            ║
# ╠══════════════════════════════════════════════════════════════╣
# ║  Este arquivo define as portas FIXAS do sistema.            ║
# ║  Se você tentar alterar as portas, os scripts irão          ║
# ║  detectar e reverter para as configurações corretas.        ║
# ║                                                              ║
# ║  Para funcionar como em hospedagem:                         ║
# ║  - Portas são fixas e não podem ser alteradas               ║
